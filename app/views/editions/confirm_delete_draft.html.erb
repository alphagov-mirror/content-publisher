<% content_for :title, t("editions.confirm_delete_draft.title", title: @edition.title_or_fallback) %>
<% content_for :back_link, render_back_link(href: document_path(@edition.document)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <div class="govuk-body">
          <%= render_govspeak(t("editions.confirm_delete_draft.description_govspeak")) %>
        </div>
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <%= form_tag document_path(@edition.document),
                     method: :delete,
                     data: { gtm: "delete-draft-submit" } do %>
          <%= render "govuk_publishing_components/components/button", {
            text: "Yes, delete draft",
            destructive: true
          } %>

          <%= link_to "Cancel",
                    document_path(@edition.document),
                    class: "govuk-link govuk-link--no-visited-state app-link--inline",
                    data: { gtm: "cancel-delete-draft" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
